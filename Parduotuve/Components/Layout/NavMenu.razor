@using Parduotuve.Services
@inject AuthService AuthService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Summoners Wardrobe</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="AdminLogin">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Login
            </NavLink>
        </div>
        @if (AuthService.IsAdmin())
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="AdminPanel/dsfoiugnfdonhgfodinhdf">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Admin dashboard
                </NavLink>
            </div>
        }
        else 
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Shopping_cart">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Shopping cart
                </NavLink>
            </div>
        }
    </nav>
</div>
@code {
    protected override void OnInitialized()
    {
        AuthService.OnAuthStateChanged += StateHasChanged; // Subscribe to Auth changes
    }
    public void Dispose()
    {
        AuthService.OnAuthStateChanged -= StateHasChanged; // Unsubscribe to prevent memory leaks
    }
}